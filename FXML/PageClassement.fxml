<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane id="borderClassement" prefHeight="200.0" prefWidth="200.0" stylesheets="@style_app.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="600.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="titre" text="Classement">
                     <HBox.margin>
                        <Insets left="175.0" right="170.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </center>
         <bottom>
            <ComboBox fx:id="filtre" prefWidth="150.0" styleClass="lesComboBox" BorderPane.alignment="TOP_LEFT" />
         </bottom>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </BorderPane>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="boxErreur" alignment="TOP_CENTER" maxHeight="40.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="CENTER" prefHeight="43.0" prefWidth="452.0">
               <children>
                  <TextField fx:id="fieldPays" prefHeight="20.0" prefWidth="85.0" promptText="Nom du pays" styleClass="lesFieldsAppli">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="ajouterPays" mnemonicParsing="false" prefHeight="24.0" prefWidth="78.0" styleClass="lesBoutons" text="Ajouter">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
