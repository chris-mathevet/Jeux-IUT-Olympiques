<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" stylesheets="@style_app.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox fx:id="test" alignment="CENTER" opacity="0.9" spacing="20.0" styleClass="lesScrollPane">
         <padding>
            <Insets left="45.0" right="45.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="43.0" prefWidth="450.0" spacing="10.0">
               <children>
                  <TextField fx:id="txtFieldDesc" promptText="Description" styleClass="lesFieldsAppli" />
                  <ComboBox fx:id="menuSportEpreuve" prefWidth="150.0" promptText="Sport" styleClass="lesComboBox" />
                  <ComboBox fx:id="menuPaysEpreuve" prefWidth="150.0" promptText="Sexe" styleClass="lesComboBox" />
                  <Button fx:id="boutonAjouter" mnemonicParsing="false" styleClass="lesBoutons" text="Ajouter">
                     <HBox.margin>
                        <Insets left="85.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="15.0" />
               </VBox.margin>
            </HBox>
            <VBox fx:id="vboxEpreuve" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
         </children>
      </VBox>
   </content>
</ScrollPane>
